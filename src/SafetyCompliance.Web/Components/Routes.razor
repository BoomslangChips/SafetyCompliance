@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="typeof(Program).Assembly"
        AdditionalAssemblies="new[] { typeof(SafetyCompliance.Shared.UI._Imports).Assembly }">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(SafetyCompliance.Shared.UI.Components.Layout.MainLayout)">
            <NotAuthorized>
                <p>You are not authorized.</p>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
</Router>
