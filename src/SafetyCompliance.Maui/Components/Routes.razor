@using Microsoft.AspNetCore.Components.Routing
<Router AppAssembly="typeof(SafetyCompliance.Maui.MauiProgram).Assembly"
        AdditionalAssemblies="new[] { typeof(SafetyCompliance.Shared.UI._Imports).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="typeof(SafetyCompliance.Shared.UI.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
</Router>
